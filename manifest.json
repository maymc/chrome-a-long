{
  "manifest_version": 2,
  "name": "Chrome-A-Long",
  "description": "Parses text from website and turns it into a song",
  "version": "1",
  "author": "Nick, Sarah, Romeo, May",
  "content_scripts": [
    {
      "css": [
        "main.css"
      ],
      "js": [
        "content.js",
        "adjectives.js"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "extensionIcon.png"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Alt+Shift+F"
      },
      "description": "Opens index.html"
    }
  },
  "permissions": [
    "activeTab"
  ]
}